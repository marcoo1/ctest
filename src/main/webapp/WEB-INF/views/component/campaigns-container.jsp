<style>
	.badgebox{
		text-align:center;
		width: 250px;
		height: 370px;
		margin: 0px;
		padding: 10px;

	}
	.imgbadge{
		width: 130px;
	    display: block;
	    margin-left: auto;
	    margin-right: auto;
	}
	.badgeboxinner{
		height: 360px;
		background-color: #333;
		padding:10px;
		border: 1px solid #444;
	}
	.badgeboxdescription{
		position: absolute;
		height: 200px;
 		color: #E6E6FA;
		background-color: #111;
		width:207px;
		text-align: left;
		line-height:20px;
		border: 1px solid #393939;
		box-shadow: 0px 0px 2px #000 inset;
	}
	.badgeboxdescription>h2{
		display: block;
		left:10px;
		font-size: 1.3em;
		margin: 10px 10px 0px;
		padding-bottom: 5px;
		font-weight: normal;
		color: #fff;
		text-shadow: 0px 0px 1px #FFF;
		border-bottom: 1px solid #666;
	}
	.badgeboxdescription>p{
		display: block;
		font-size: 1em;
		margin: 10px 10px 10px 10px;
		line-height: 20px;
		padding-top:5px;
		color: #fff;
		text-shadow: 0px 0px 1px #FFF;
	}
	/* centered columns styles */
	.row-centered {
	    text-align:center;
	}
	.col-centered {
	    display:inline-block;
	    float:none;
	    /* reset the text-align */
	    text-align:left;
	    /* inline-block space fix */
	    margin-right:-4px;
	}

</style>


